{
    "name": "neos/neos-base-distribution",
    "description": "Neos Base Distribution",
    "license": "GPL-3.0+",
    "support": {
        "email": "hello@neos.io",
        "slack": "http://slack.neos.io/",
        "forum": "https://discuss.neos.io/",
        "wiki": "https://discuss.neos.io/c/the-neos-project/project-documentation",
        "issues": "https://jira.neos.io/browse/NEOS",
        "docs": "http://neos.readthedocs.org/",
        "source": "https://github.com/neos/neos-base-distribution"
    },
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "require": {
        "typo3/neos": "2.2.x-dev",
        "typo3/neos-nodetypes": "2.2.x-dev",
        "neos/demo": "2.2.x-dev",
        "typo3/neos-kickstarter": "2.2.x-dev",

        "typo3/neos-seo": "~1.0",
        "typo3/imagine": "~2.0",
        "typo3/twitter-bootstrap": "~2.0",
        "typo3/form": "~2.0",
        "typo3/setup": "~2.0",
        "flowpack/neos-frontendlogin": "~2.0",
        "neos/redirecthandler-neosadapter": "@dev",
        "neos/redirecthandler-databasestorage": "@dev",

        "neos/diff": "@dev",
        "typo3/eel": "@dev",
        "typo3/flow": "@dev",
        "typo3/fluid": "@dev",
        "neos/error-messages": "@dev",
        "neos/utility-arrays": "@dev",
        "neos/utility-files": "@dev",
        "neos/utility-lock": "@dev",
        "neos/utility-mediatypes": "@dev",
        "neos/utility-objecthandling": "@dev",
        "neos/utility-opcodecache": "@dev",
        "neos/utility-pdo": "@dev",
        "neos/utility-schema": "@dev",
        "neos/utility-unicode": "@dev",
        "typo3/party": "@dev",
        "typo3/kickstart": "@dev",
        "typo3/media": "@dev",
        "typo3/typo3cr": "@dev",
        "typo3/typoscript": "@dev",
        "neos/redirecthandler": "@dev"
    },
    "require-dev": {
        "typo3/buildessentials": "3.2.x-dev",
        "mikey179/vfsstream": "~1.6",
        "phpunit/phpunit": "~4.8 || ~5.2.0",
        "symfony/css-selector": "~2.0",
        "flowpack/behat": "dev-master"
    },
    "replace": {
        "typo3/neos-base-distribution": "self.version"
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
