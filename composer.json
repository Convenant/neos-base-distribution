{
    "name": "typo3/neos-base-distribution",
    "description": "Neos Base Distribution",
    "license": "GPL-3.0+",
    "support": {
        "email": "hello@neos.io",
        "slack": "http://slack.neos.io/",
        "irc": "irc://irc.freenode.org/typo3-neos",
        "forum": "https://discuss.neos.io/",
        "issues": "https://jira.neos.io/",
        "source": "https://git.typo3.org/"
    },
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "require": {
        "typo3/neos": "1.1.*@dev",
        "typo3/neos-nodetypes": "1.1.*@dev",
        "typo3/neosdemotypo3org": "1.1.*@dev",
        "typo3/neos-kickstarter": "1.1.*@dev",

        "doctrine/migrations": "1.0.0-alpha3",

        "typo3/eel": "@dev",
        "typo3/flow": "@dev",
        "typo3/fluid": "@dev",
        "typo3/party": "@dev",
        "typo3/kickstart": "@dev",
        "typo3/media": "@dev",
        "typo3/imagine": "@dev",
        "typo3/twitter-bootstrap": "@dev",
        "typo3/form": "1.2.*@dev",
        "typo3/setup": "1.0.*@dev",
        "typo3/typo3cr": "@dev",
        "typo3/typoscript": "@dev"
    },
    "require-dev": {
        "typo3/buildessentials": "2.2.*@dev",
        "mikey179/vfsstream": "1.4.*",
        "phpunit/phpunit": "4.4.*",
        "flowpack/behat": "dev-master"
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
